{
  "navigationFallback": {
    "rewrite": "/index.html",
    "exclude": ["/api/*", "/images/*", "/assets/*"]
  },
  "routes": [
    { "route": "/admin/*", "allowedRoles": ["admin"], "statusCode": 200 },
    { "route": "/my/*",    "allowedRoles": ["authenticated"], "statusCode": 200 }
  ],
  "responseOverrides": {
    "401": {
      "redirect": "/.auth/login/aad?post_login_redirect_uri=/",
      "statusCode": 302
    },
    "403": { "rewrite": "/403.html", "statusCode": 403 }
  }
}
